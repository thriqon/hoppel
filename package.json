{
  "name": "hoppel",
  "version": "0.4.0",
  "description": "Simulate CouchDB MR",
  "main": "dist/hoppel.js",
  "jsnext:main": "lib/execute.js",
  "scripts": {
    "pretest": "npm run lint",
    "prepublish": "npm run build && npm test",
    "test": "npm run unit-test && npm run coverage && npm run integration-test",

    "build": "node scripts/build.js",
    "coverage": "npm run run-coverage && npm run check-coverage",
    "run-coverage": "babel-node ./node_modules/.bin/isparta cover ./node_modules/.bin/_mocha --compilers ls:LiveScript test/unit",
    "check-coverage": "istanbul check-coverage --lines 100 --function 100 --statements 100 --branches 100",
    "lint": "eslint lib test",
    "unit-test": "babel-node ./node_modules/.bin/_mocha test/unit -R progress",
    "integration-test": "babel-node ./node_modules/.bin/_mocha --compilers ls:LiveScript test/integration -R progress"
  },
  "keywords": [
    "mapreduce"
  ],
  "author": "Jonas Weber <mail@jonasw.de> (http://jonasw.de/)",
  "license": "ISC",
  "devDependencies": {
    "LiveScript": "^1.3.1",
    "babel-cli": "^6.5.1",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "chai": "^3.4.1",
    "eslint": "^2.1.0",
    "isparta": "^4.0.0",
    "istanbul": "^0.4.1",
    "memdown": "^1.1.0",
    "mocha": "^2.3.4",
    "pouchdb": "^5.0.0",
    "rollup": "^0.25.1",
    "rollup-plugin-babel": "^2.3.9",
    "uglifyjs": "^2.4.10"
  },
  "dependencies": {
    "notevil": "1.0.0",
    "pouchdb-collate": "1.2.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "es6": true
    }
  },
  "repository": "thriqon/hoppel",
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
